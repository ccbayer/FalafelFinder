<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
   <div class="field">
	<label for="post[user_id]">Author</label><br/>
	<%= collection_select :post, :user_id, User.all, :id, :fname, :prompt => true %>			
  </div>
  <div class="field">
    <%= f.label :postcontent %><br />
    <%= f.text_area :postcontent %>
  </div>
  <div class="field">
    <%= f.label :type %><br />
   <!-- <%= select('post','type', ['Post','Review']) %>  -->
       <%= f.text_area :type %>

  </div>
<div class="review_area">
  <div class="field">
    <%= f.label :locationname %><br />
    <%= f.text_field :locationname %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </div>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
